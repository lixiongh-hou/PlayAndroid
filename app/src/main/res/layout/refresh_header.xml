<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?colorTransparent"
    android:paddingTop="10dp"
    android:gravity="center"
    android:paddingBottom="10dp">

    <com.viva.play.views.TaoBaoView
        android:id="@+id/taoBaoView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:ringMax="100"
        app:ringImage="@drawable/jiantou"
        app:ringProgressColor="?colorIconSecond"
        app:ringWidth="1dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/reTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:textColor="?colorTextSecond"
        android:textSize="13sp" />

</androidx.appcompat.widget.LinearLayoutCompat>