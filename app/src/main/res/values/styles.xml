<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?colorMainOrSurface</item>
        <item name="ab_immersion">immersed</item>
        <item name="ab_statusBarMode">light</item>
        <item name="ab_bottomLineHeight">0dp</item>
        <item name="ab_statusBarColor">?colorTransparent</item>
        <item name="ab_titleBarHeight">45dp</item>
    </style>

    <style name="ActionBar.Common">
        <item name="abc_titleTextColor">?colorOnMainOrSurface</item>
        <item name="abc_leftIconColor">?colorOnMainOrSurface</item>
        <item name="abc_leftIconPadding">13dp</item>
        <item name="abc_leftIconMarginLeft">13dp</item>
        <item name="abc_leftTextColor">?colorOnMainOrSurface</item>
        <item name="abc_rightIconColor">?colorOnMainOrSurface</item>
        <item name="abc_rightIconPadding">13dp</item>
        <item name="abc_rightIconMarginRight">3dp</item>
        <item name="abc_rightTextColor">?colorOnMainOrSurface</item>
    </style>

    <style name="ActionBar.Common.Back">
        <item name="abc_leftIconRes">@drawable/ic_back</item>
        <item name="abc_leftIconMarginLeft">0dp</item>
        <item name="abc_leftIconClickToFinish">true</item>
    </style>

    <style name="roundedCornerImageStyle">
        <item name="cornerSize">3dp</item>
    </style>

    <style name="ButtonMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?colorTextOnMain</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_press_color_main_radius_max</item>
    </style>

    <style name="basic_ui_LoadingBarH" parent="Widget.MaterialProgressBar.ProgressBar.Horizontal.NoPadding">
        <item name="android:minHeight">1dp</item>
        <item name="android:maxHeight">5dp</item>
        <item name="mpb_showProgressBackground">false</item>
        <item name="mpb_progressTint">?colorAssist</item>
        <item name="mpb_indeterminateTint">?colorAssist</item>
        <item name="mpb_progressStyle">horizontal</item>
        <item name="mpb_useIntrinsicPadding">false</item>
    </style>

    <style name="basic_ui_LoadingBarC" parent="Widget.AppCompat.ProgressBar" />

    <declare-styleable name="CollectView">
        <attr name="cv_uncheckedColor" format="color|reference" />
    </declare-styleable>

    <style name="StateView_Center">
        <item name="msv_animateViewChanges">false</item>
        <item name="msv_emptyView">@layout/layout_state_empty_center</item>
        <item name="msv_errorView">@layout/layout_state_error_center</item>
        <item name="msv_loadingView">@layout/layout_state_loading_center</item>
        <item name="msv_viewState">content</item>
    </style>

    <style name="commonStyleDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item><!-- 半透明 -->
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!--弹出框周围模糊-->
    <style name="style_dialog_fuzzy" parent="commonStyleDialog">
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--中间弹窗框动画-->
    <style name="DialogCentreAnim">
        <item name="android:windowEnterAnimation">@anim/dialog_centre_anim_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_centre_anim_exit</item>
    </style>

    <!--底部弹窗框动画-->
    <style name="DialogBottomAnim">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_anim_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_anim_exit</item>
    </style>
</resources>