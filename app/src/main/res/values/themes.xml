<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="ThemePlayAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_blue</item>
        <item name="colorPrimaryVariant">@color/color_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_blue</item>
        <item name="colorSecondaryVariant">@color/color_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="android:windowAnimationStyle">@style/SwipeBackActivityAnimRightInParallaxOut
        </item>

        <!-- 主题颜色 -->
        <item name="colorMain">@color/color_blue</item>
        <item name="colorMainAlpha">@color/color_blue_light_a60</item>
        <item name="colorAssist">@color/color_green</item>
        <item name="colorStriking">@color/color_orange</item>
        <item name="colorBackground">@color/color_gray_light</item>
        <item name="colorForeground">@color/color_gray_light</item>
        <item name="colorForegroundTop">@color/color_gray_light</item>
        <item name="colorLoginBg">@color/color_blue</item>
        <item name="colorDialogBg">@color/color_black_a50</item>
        <item name="colorRippleDark">@color/color_black_a05</item>
        <item name="colorSurface">@color/color_white</item>
        <item name="colorSurfaceMask">@color/color_black_a05</item>
        <item name="colorHeartOuter">@color/color_orange</item>
        <item name="colorHeartCenter">@color/color_orange_light</item>
        <item name="colorMainOrSurface">@color/color_blue</item>
        <item name="colorTransparent">@color/color_transparent</item>
        <item name="colorOnMainOrSurface">@color/color_white</item>
        <item name="colorSurfaceTop">@color/color_gray_light</item>
        <item name="colorThird">@color/color_gray_dark3</item>
        <item name="colorShadow">@color/color_black_a08</item>
        <item name="colorIconThird">@color/color_gray_dark5</item>
        <item name="colorInvertAlpha">@color/color_black_a05</item>
        <item name="colorLine">@color/color_gray</item>
        <item name="colorHeartUncheckedOnMain">@color/color_blue</item>
        <item name="colorOnMainOrSurfaceAlpha">@color/color_white_a50</item>
        <item name="colorSurfaceTopAlpha">@color/color_gray_light_a80</item>


        <!--图标颜色-->
        <item name="colorIconMain">@color/color_blue</item>
        <item name="colorIconOnMain">@color/color_white</item>
        <item name="colorIconSecond">@color/color_gray_dark3</item>
        <item name="colorIconSurface">@color/color_gray_dark1</item>
        <item name="colorIconAccent">@color/color_orange</item>
        <!--文字颜色-->
        <item name="colorTextMain">@color/color_blue</item>
        <item name="colorTextOnMain">@color/color_white</item>
        <item name="colorTextSurface">@color/color_gray_dark1</item>
        <item name="colorTextSecond">@color/color_gray_dark3</item>
        <item name="colorTextThird">@color/color_gray_dark5</item>
        <item name="colorTextFourth">@color/color_gray_dark6</item>
        <item name="colorTextInvert">@color/color_white</item>
        <item name="colorTextMainAlpha">@color/color_blue_a60</item>
        <item name="colorTextAccent">@color/color_orange</item>
        <item name="colorTextSurfaceAlpha">@color/color_gray_dark1_a50</item>

    </style>

    <style name="TranslucentTheme" parent="ThemePlayAndroid">
        <!--注意：Android 21（android 5.0 Lollipop）这个系统开始这个属性设置为true，状态栏会呈现半透明加暗效果，并不能全透明-->
        <item name="android:windowTranslucentStatus">false</item>
        <!--注意：Android 21（5.0）这个系统开始状态栏透明的话需要把颜色设置为透明，并且上面那个属性需要设置为false-->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="TranslucentTheme.Main">
        <item name="android:windowBackground">@color/colorSplashScreen</item>
    </style>

    <style name="Theme.SplashScreen.Demo" parent="TranslucentTheme">
